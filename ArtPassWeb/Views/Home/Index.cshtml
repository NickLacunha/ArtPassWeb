@section scripts {
    @Scripts.Render("~/bundles/app")
}

<div class="page-header">
    <h1>ArtPassAdmin</h1>
</div>

<div class="row">

    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">Registrants</h2>
            </div>
            <div class="panel-body">
                <ul class="list-unstyled" data-bind="foreach: registrants">
                    <li>
                        <strong><span data-bind="text: Name"></span></strong>: 
                        <small><a href="#" data-bind="click: $parent.getBookDetail">Details</a></small>
                    </li>
                </ul>
            </div>
        </div>
        <div class="alert alert-danger" data-bind="visible: error"><p data-bind="text: error"></p></div>
    </div>

    <!-- ko if:detail() -->

    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">Detail</h2>
            </div>
            <table class="table">
                <tr><td>Name</td><td data-bind="text: detail().Name"></td></tr>
                <tr><td>Age</td><td data-bind="text: detail().Age"></td></tr>
                <tr><td>Hospital</td><td data-bind="text: detail().HospitalName"></td></tr>
                <tr><td>Email Address</td><td data-bind="text: detail().EmailAddress"></td></tr>
                <tr><td>Days Staying</td><td data-bind="text: detail().DaysStaying"></td></tr>
                
            </table>
        </div>
    </div>

    <!-- /ko -->

    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">Add Registrant</h2>
            </div>

            <div class="panel-body">
                <form class="form-horizontal" data-bind="submit: addRegistrant">
                    <div class="form-group">
                        <label for="inputHospital" class="col-sm-2 control-label">Hospital</label>
                        <div class="col-sm-10">
                            <select data-bind="options:hospitals, optionsText: 'Name', value: newRegistrant.Hospital"></select>
                        </div>
                    </div>

                    <div class="form-group" data-bind="with: newRegistrant">
                        <label for="inputName" class="col-sm-2 control-label">Name</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="inputName" data-bind="value:Name" />
                        </div>

                        <label for="inputAge" class="col-sm-2 control-label">Age</label>
                        <div class="col-sm-10">
                            <input type="number" class="form-control" id="inputAge" data-bind="value:Age" />
                        </div>

                        <label for="inputEmailAddress" class="col-sm-2 control-label">Email Address</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="inputEmailAddress" data-bind="value:EmailAddress" />
                        </div>

                        <label for="inputDaysStaying" class="col-sm-2 control-label">Days Staying</label>
                        <div class="col-sm-10">
                            <input type="number" step="any" class="form-control" id="inputDaysStaying" data-bind="value:DaysStaying" />
                        </div>
                    </div>
                    <button type="submit" class="btn btn-default">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>